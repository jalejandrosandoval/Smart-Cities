---
import Default from '../components/Init/Default.astro';

export interface Props {
  title: string;
}

const { title } = Astro.props as Props;
---

<html>
  <head>
    <meta charset="utf-8" />  
	  <meta name="viewport" content="width=device-width" /> 
    <meta content="IE=Edge" http-equiv="X-UA-Compatible">
    <meta name="description" content="A Project Smart Cities...">
	  <link rel="icon" type="image/svg+xml" href="/icons/smart-city-icon.png" />
    <title>{title}</title>
  </head>
  <body>
    <Default></Default>
  </body>
</html>
